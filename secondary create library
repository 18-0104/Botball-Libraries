void building_line_up()
{
    wait(50);
    
    servo(3,1530);
    
    wait(50);
    
    create_line_follow_to_void(0,1);//check to make sure we are not in front of a building
    
    wait(100);// pause for a second
    
    servo(3,2023);//keep meeples
    
    wait(50);
    
    create_line_follow_to_building(0,1);//line up with buldings
    
    wait(50);
    
    create_line_follow_to_building(0,1);//line up with buldings
    
    wait(50);
    
    create_drive_forward(50,10);
    
    wait(100);
}

void meeple_attack()
{
    
    slow_servo(840,2,3);
    
    slow_servo(730,0,0);
    
    wait(100);
    
    drive_until_change_digital(9,0,390);
    
    wait(100);
    
    slow_servo(1700,1,3);
    
    slow_servo(1369,1,0);
    
    wait(100);
    
    mav(0,-450);
    
    msleep(7000);
    
    servo(3,2023);
    
    wait(50);
    
    slow_servo(840,2,3);
    
    wait(50);
    
    mav(0,450);
    
    msleep(2000);
    
    wait(10);
    
    servo(3,2023);
    
    mav(0,-450);
    
    msleep(2500);
          
}
