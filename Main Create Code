#include <kipr/botball.h>
#include </home/root/Documents/KISS/Jonathan H/Meeple Demon 2.0/include/create_level_2_library.h>


int p = 15;
int main()
{
    create_wake_up();
   
    
   //GET TO THE END OF THE MEEPLE LINE
    create_drive_backwards(150,335); //move forwards to tht center suply line
    
    create_turn_right(86,80); // turn to the left where the electrical lines are located
    
    create_drive_backwards(150,730); //move towards the end of the supply line

    create_line_follow_normal(240,0);
    
    
    //ATTACK MEEPLES
    building_line_up();// line up with the edge of the first building
    
    wait(p);//pause 
    
    meeple_attack();// grab the meeples
    
    wait(p);//pause
    
    building_line_up();// line up with the edge of the second building
    
    wait(p);
    
    create_line_follow_slow(12,0);
    
    wait(p);
    
    meeple_attack();// grab the meeples
    
    wait(p);//pause
    
    building_line_up();// line up with the edge of the third building
    
    wait(p);//pause 
    
    meeple_attack();// grab the meeples
    
    wait(p);//pause

    create_drive_forward(50,325);
    
    wait(p);
    
    meeple_attack();
    
    wait(p);
    
    //SCENARIO 1
    servo(3,2023);
    
    wait(p);
    
    create_drive_forward(75,50);
    
    wait(p);
    
    create_turn_left(45,20);
    
    wait(p);
    
    servo(3,167);
    
    wait(p);
    
    servo(0,765);
    
    wait(p);
    
    create_turn_left(45,20);
    
   
    
    
    
    create_shutdown();
    return 0;
}
